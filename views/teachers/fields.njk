<div class="item">
  <div class="titulo">Url do Avatar</div>
  <div>
    <input type="url" name="avatar_url" placeholder="https://" value="{{teacher.avatar_url}}">
  </div>
</div>
<div class="item">
  <div class="titulo">Nome do professor</div>
  <div>
    <input type="text" name="nome" placeholder="Digite o nome completo" value="{{teacher.nome}}">
  </div>
</div>
<div class="item">
  <div class="titulo">Data de nascimento</div>
  <div>
    <input type="date" name="nascimento" placeholder="Idade" value="{{teacher.nascimento}}">
  </div>
</div>
<div class="item">
  <div class="titulo">Grau de escolaridade</div>
  <div>
    <select name="escolaridade">
      <option value="Médio Completo">Ensino Médio Completo</option>
      <option value="Superior Completo">Ensino Superior Completo</option>
      <option value="Mestrado">Mestrado</option>
      <option value="Doutorado">Doutorado</option>
    </select>
  </div>
</div>
<div class="item">
  <div class="titulo">Tipo de aula</div>
  <div>
    <span><input type="radio" name="tipoAula" value="Presencial" {% if teacher.tipoAula == "Presencial"%} checked="checked" {% endif%}>Presencial</span>
    <span><input type="radio" name="tipoAula" value="Distancia" {% if teacher.tipoAula == "Distancia"%} checked="checked" {% endif%}>À distância</span>
  </div>
</div>
<div class="item">
  <div class="titulo">Área de atuação</div>
  <div>
    <input type="text" name="atuacao" placeholder="Separe os tipos de atuação por virgula">
  </div>
</div>
<button type="submit">Salvar</button>