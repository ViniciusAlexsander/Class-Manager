<div class="item">
  <div class="titulo">Url do Avatar</div>
  <div>
    <input type="url" name="avatar_url" placeholder="https://" value="{{teacher.avatar_url}}">
  </div>
</div>
<div class="item">
  <div class="titulo">Nome do professor</div>
  <div>
    <input type="text" name="nome" placeholder="Digite o nome completo" value="{{teacher.nome}}">
  </div>
</div>
<div class="item">
  <div class="titulo">Data de nascimento</div>
  <div>
    <input type="date" name="nascimento" placeholder="Idade" value="{{teacher.nascimento}}">
  </div>
</div>
<div class="item">
  <div class="titulo">Grau de escolaridade</div>
  <div>
    <select name="escolaridade">
      <option value="Médio Completo" {% if teacher.escolaridade == "Médio Completo"%} selected="selected" {%endif%}>Ensino Médio Completo</option>
      <option value="Superior Completo" {% if teacher.escolaridade == "Superior Completo"%} selected="selected" {%endif%}>Ensino Superior Completo</option>
      <option value="Mestrado" {% if teacher.escolaridade == "Mestrado"%} selected="selected" {%endif%}>Mestrado</option>
      <option value="Doutorado" {% if teacher.escolaridade == "Doutorado"%} selected="selected" {%endif%}>Doutorado</option>
    </select>
  </div>
</div>
<div class="item">
  <div class="titulo">Tipo de aula</div>
  <div>
    <span><input type="radio" name="tipoAula" value="Presencial" {% if teacher.tipoAula == "Presencial"%} checked="checked" {% endif%}>Presencial</span>
    <span><input type="radio" name="tipoAula" value="Distância" {% if teacher.tipoAula == "Distancia"%} checked="checked" {% endif%}>À distância</span>
  </div>
</div>
<div class="item">
  <div class="titulo">Área de atuação</div>
  <div>
    <input type="text" name="services" placeholder="Separe os tipos de atuação por virgula" value="{{teacher.services}}">
  </div>
</div>
<button type="submit">Salvar</button>