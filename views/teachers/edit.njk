{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
    <section class="informacoes">
      <form method="POST" action="/teachers?_method=PUT">
        <h3>Editar Detalhes</h3>
        {% include 'teachers/fields.njk'%}
        <input type="hidden" name="id" value="{{teacher.id}}">
      </form>
      <form id="delete" method="POST" action="/teachers?_method=DELETE">
        <input type="hidden" name="id" value="{{teacher.id}}">
        <button type="submit">Deletar</button>
      </form>
    </section>
  </div>
  <script>
    const formDelete = document.querySelector("#delete");
    formDelete.addEventListener("submit", function (event) {
      const confirmation = confirm("Deseja realmente deletar?");
      if (!confirmation) {
        event.preventDefault();
      }
    });
  </script>
{% endblock content %}